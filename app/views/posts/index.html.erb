<h1>게시판</h1>
<a href = "/posts/new">새글쓰기</a><br>

<table>
    <tr>
        <th>ID</th>
        <th>제목</th>
        <th>이메일</th>
        <th>시간</th>
    </tr>
    
    <%@posts.each do |p|%>
        <tr>
            <td><%=p.id%></td>
            <td><a href="/posts/show/<%=p.id%>"><%=p.title%></a></td>
            <td><%=p.content%></td>
            <td><%=time_ago_in_words(p.created_at)%></td>
        </tr>
    <%end%>
</table>

